{
	"name": "webpack-template",
	"version": "0.0.1",
	"description": "webpack-template",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "cross-env NODE_ENV=development webpack serve --config ./config/dev.cfg.js",
		"build": "cross-env NODE_ENV=production webpack --progress --config ./config/prod.cfg.js && size-limit",
		"lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
		"lint-fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
		"stylelint": "stylelint \"src/*.css\"",
		"stylelint-fix": "stylelint \"src/*.css\" --fix",
		"server": "node ./config/server/server.js",
		"sortmq": "node ./config/helpers/sortmq.js",
		"purify": "node ./config/helpers/purify.js",
		"size": "size-limit"
	},
	"size-limit": [
		{
			"path": "./dist/js/*.js",
			"limit": "2000 ms"
		}
	],
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.14.0",
		"@babel/eslint-parser": "^7.13.14",
		"@babel/preset-env": "^7.14.1",
		"@babel/preset-react": "^7.13.13",
		"@babel/preset-typescript": "^7.14.5",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
		"@size-limit/preset-app": "^4.10.2",
		"@svgr/webpack": "^5.5.0",
		"@types/react": "^17.0.11",
		"@types/react-dom": "^17.0.7",
		"@typescript-eslint/eslint-plugin": "^4.27.0",
		"@typescript-eslint/parser": "^4.27.0",
		"autoprefixer": "^10.2.5",
		"babel-loader": "^8.2.2",
		"copy-webpack-plugin": "^8.1.1",
		"cross-env": "^7.0.3",
		"css-loader": "^5.2.4",
		"css-minimizer-webpack-plugin": "^2.0.0",
		"css-mqpacker": "^7.0.0",
		"eslint": "^7.25.0",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"html-webpack-plugin": "^5.3.1",
		"image-webpack-loader": "^7.0.1",
		"mini-css-extract-plugin": "^1.6.0",
		"node-static": "^0.7.11",
		"postcss": "^8.2.14",
		"postcss-loader": "^5.2.0",
		"purify-css": "^1.2.5",
		"react-refresh": "^0.10.0",
		"size-limit": "^4.10.2",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"svgo": "^2.3.0",
		"svgo-loader": "^3.0.0",
		"typescript": "^4.3.2",
		"webpack": "^5.36.2",
		"webpack-cli": "^4.7.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.7.3"
	},
	"dependencies": {
		"classnames": "^2.3.1",
		"clsx": "^1.1.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	}
}
