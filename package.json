{
	"name": "webpack-template",
	"version": "0.0.1",
	"description": "webpack-template",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "cross-env NODE_ENV=development webpack serve --config ./config/dev.cfg.js",
		"build": "cross-env NODE_ENV=production webpack --progress --config ./config/prod.cfg.js && size-limit",
		"lint": "eslint src/**/*.js",
		"lint-fix": "eslint --fix src/**/*.js",
		"stylelint": "stylelint src/**/*.scss",
		"stylelint-fix": "stylelint --fix src/**/*.scss",
		"server": "node ./config/server/server.js",
		"purify": "node ./config/helpers/purify.js",
		"size": "size-limit"
	},
	"size-limit": [
		{
			"path": "./dist/js/*.js",
			"limit": "500 ms"
		}
	],
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.14.0",
		"@babel/eslint-parser": "^7.13.14",
		"@babel/preset-env": "^7.14.1",
		"@size-limit/preset-app": "^4.10.2",
		"autoprefixer": "^10.2.5",
		"babel-loader": "^8.2.2",
		"cross-env": "^7.0.3",
		"css-loader": "^5.2.4",
		"css-minimizer-webpack-plugin": "^2.0.0",
		"css-mqpacker": "^7.0.0",
		"eslint": "^7.25.0",
		"eslint-webpack-plugin": "^2.5.4",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"html-loader": "^2.1.2",
		"html-webpack-plugin": "^5.3.1",
		"image-webpack-loader": "^7.0.1",
		"mini-css-extract-plugin": "^1.6.0",
		"node-static": "^0.7.11",
		"postcss": "^8.2.14",
		"postcss-loader": "^5.2.0",
		"purify-css": "^1.2.5",
		"sass": "^1.32.12",
		"sass-loader": "^11.0.1",
		"size-limit": "^4.10.2",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-scss": "^3.19.0",
		"svgo": "^2.3.0",
		"svgo-loader": "^3.0.0",
		"webpack": "^5.36.2",
		"webpack-cli": "^4.7.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.7.3"
	}
}
