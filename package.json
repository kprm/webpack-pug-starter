{
	"name": "webpack-template",
	"version": "0.0.1",
	"description": "webpack-template",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "webpack-dev-server --config ./config/dev.cfg.js",
		"build": "rimraf ./dist && webpack --progress --config ./config/prod.cfg.js && size-limit",
		"lint": "eslint src/*.js",
		"lint-fix": "eslint --fix src/*.js",
		"server": "node ./config/server/server.js",
		"purify": "node ./config/helpers/purify.js",
		"shorty": "gulp shorty --gulpfile ./config/helpers/gulp-helpers.js",
		"iconfont": "rimraf src/icons/icon_font/icons/.gitkeep && svgo -f src/icons/icon_font/icons && node ./config/helpers/iconfont.js && rimraf src/fonts/**/*.{ttf,svg}",
		"icons": "gulp icons --gulpfile ./config/helpers/gulp-helpers.js && svgo -f src/images/icons",
		"sprite": "rimraf src/images/sprite.svg && gulp svgsprite --gulpfile ./config/helpers/gulp-helpers.js",
		"clearfonts": "rimraf src/fonts/**/*.{css,html,eot,ttf,svg}",
		"size": "size-limit --why"
	},
	"size-limit": [
		{
			"path": "./dist/js/*.js"
		}
	],
	"devDependencies": {
		"autoprefixer": "^8.5.0",
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.2.3",
		"babel-loader": "^7.1.2",
		"babel-preset-env": "^1.6.0",
		"babel-preset-es2015": "^6.24.1",
		"compression-webpack-plugin": "^1.0.0",
		"copy-webpack-plugin": "^4.5.1",
		"css-hot-loader": "^1.3.9",
		"css-loader": "^0.28.5",
		"css-mqpacker": "^6.0.1",
		"eslint": "^4.6.1",
		"eslint-loader": "^2.0.0",
		"file-loader": "^1.1.11",
		"friendly-errors-webpack-plugin": "^1.6.1",
		"fs": "^0.0.1-security",
		"glob": "^7.1.2",
		"gulp": "^3.9.1",
		"gulp-cheerio": "^0.6.2",
		"gulp-newer": "^1.3.0",
		"gulp-replace": "^1.0.0",
		"gulp-shorthand": "^1.1.0",
		"gulp-svg-sprite": "^1.4.0",
		"gulp-svgmin": "^1.2.4",
		"html-webpack-plugin": "^3.2.0",
		"image-webpack-loader": "^4.3.1",
		"jquery": "^3.3.1",
		"mini-css-extract-plugin": "^0.4.0",
		"node-sass": "^4.5.3",
		"node-static": "^0.7.9",
		"optimize-css-assets-webpack-plugin": "^4.0.1",
		"postcss": "^6.0.10",
		"postcss-loader": "^2.0.6",
		"pug": "^2.0.0-rc.3",
		"pug-loader": "^2.4.0",
		"purify-css": "^1.2.5",
		"resolve-url-loader": "^2.1.0",
		"rimraf": "^2.6.1",
		"sass-loader": "^7.0.1",
		"script-ext-html-webpack-plugin": "^2.0.1",
		"size-limit": "^0.18.1",
		"stylelint": "^9.2.1",
		"stylelint-webpack-plugin": "^0.10.5",
		"svg-sprite-loader": "^3.2.5",
		"svg-transform-loader": "^1.0.1",
		"svgo": "^1.0.5",
		"svgo-loader": "^2.1.0",
		"underscore": "^1.8.3",
		"webfonts-generator": "^0.4.0",
		"webpack": "^4.8.3",
		"webpack-cli": "^2.1.3",
		"webpack-dev-server": "^3.1.4",
		"webpack-merge": "^4.1.0"
	}
}
