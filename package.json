{
	"name": "webpack-template",
	"version": "0.0.1",
	"description": "webpack-template",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "cross-env NODE_ENV=development webpack serve --config ./config/dev.cfg.js",
		"build": "rimraf ./dist && cross-env NODE_ENV=production webpack --progress --config ./config/prod.cfg.js && size-limit",
		"lint": "eslint src/*.js",
		"lint-fix": "eslint --fix src/*.js",
		"server": "node ./config/server/server.js",
		"purify": "node ./config/helpers/purify.js",
		"clearfonts": "rimraf src/fonts/**/*.{css,html,eot,ttf,svg}",
		"size": "size-limit"
	},
	"size-limit": [
		{
			"path": "./dist/js/*.js",
			"limit": "2000 ms"
		}
	],
	"browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
	"devDependencies": {
		"@babel/core": "^7.12.16",
		"@babel/eslint-parser": "^7.12.16",
		"@babel/preset-env": "^7.12.16",
		"@babel/preset-react": "^7.12.13",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
		"@size-limit/preset-app": "^4.9.2",
		"autoprefixer": "^10.2.4",
		"babel-loader": "^8.2.2",
		"copy-webpack-plugin": "^7.0.0",
		"cross-env": "^7.0.3",
		"css-loader": "^5.0.2",
		"css-minimizer-webpack-plugin": "^1.2.0",
		"css-mqpacker": "^7.0.0",
		"eslint": "^7.19.0",
		"eslint-webpack-plugin": "^2.5.1",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"html-loader": "^1.3.2",
		"html-webpack-plugin": "^5.1.0",
		"image-webpack-loader": "^7.0.1",
		"mini-css-extract-plugin": "^1.3.6",
		"node-sass": "^5.0.0",
		"node-static": "^0.7.11",
		"postcss": "^8.2.6",
		"postcss-loader": "^5.0.0",
		"purify-css": "^1.2.5",
		"react-refresh": "^0.9.0",
		"rimraf": "^3.0.2",
		"sass-loader": "^11.0.1",
		"script-ext-html-webpack-plugin": "^2.1.5",
		"size-limit": "^4.9.2",
		"stylelint": "^13.10.0",
		"svgo": "^1.3.2",
		"svgo-loader": "^2.2.1",
		"webpack": "^5.21.2",
		"webpack-cli": "^4.5.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.7.3"
	},
	"dependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	}
}
